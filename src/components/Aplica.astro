        <input type="radio" name="slider" id="s5">

        <div class="cards-1">

            <label for="s1" id="slide1">
                <div class="card-a">
                    <div class="image">
                        <img src="/login.jpeg" alt="Off-White x Air Jorda">
                    </div>
                </div>
            </label>

            <label for="s2" id="slide2">
                <div class="card-a">
                    <div class="image">
                        <img src="/perrocabezon.jpeg" alt="Off-White x Air Jorda">
                    </div>
